/* pages/system/system.wxss */
.system{background-color: #fafafa;padding-bottom: 120rpx;}
.bg{width: 100%;height: 365rpx;position: relative;}
.nav-box{margin: 0 5%;width: 90%;position: absolute;top:300rpx;}
.navs{padding: 5% 2%;background-color: #fff;overflow: hidden;border-radius: 10rpx;}
.nav{float: left;width: 25%;overflow: hidden;}
.nav navigator{float:left;width: 98%;text-align: center;}
.nav navigator image{width: 100rpx;height: 100rpx;border-radius: 50%;}
.nav navigator view{font-size: 28rpx;color:#666;}
.nav-shu{float: left;width: 2rpx;height: 50rpx;background-color: #aaa;margin: 30rpx 0;}
.search{width: 90%;margin: 0 5%;background-color: #f1eff2;height: 80rpx;margin-top: 170rpx;border-radius: 22rpx;position: relative;}
.seek{width: 40rpx;height: 40rpx;position: absolute;top:20rpx;left: 30rpx;}
.search text{color: #4ac372;margin: 0 30rpx;position: absolute;top:10rpx;left: 60rpx;}
.search input{font-size: 32rpx;color:#adaaad;position: absolute;top:15rpx;left: 120rpx;}
.close{width: 36rpx;height: 40rpx;position: absolute;top:20rpx;right: 30rpx;}
.news{width: 90%;margin: 0 3%;margin-top:15rpx;border-bottom: solid 2rpx #aaa;font-size:36rpx;color: #666;padding: 20rpx 2%;}
.news image{width: 7rpx;height: 40rpx;margin-bottom: -4rpx;margin-right: 10rpx;}
.news .news-more{float: right;font-size:30rpx;margin-top: 8rpx;}
.news .news-more image{width: 30rpx;height: 32rpx;}

.problem-box{width: 100%;background-color: #fff;}
/*#fafafa*/
.problem{border-bottom: dashed 2rpx #c9c9c9;margin: 0 20rpx;padding: 30rpx 0;position: relative;}
.pro-img{width: 160rpx;height: 102rpx;position: absolute;top:55rpx;left: 5rpx;}
.pro-cont{padding-left: 185rpx;padding-right: 175rpx;}
.pro-title{font-size: 30rpx;color:#666;position: relative;}
.pro-title view{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pro-title view.active{margin-right:50rpx;}
.pro-title text{font-size: 26rpx;color: #ff9257;position: absolute;top:-10rpx;right: 0;}
.pro-addr{font-size: 26rpx;color: #848484;margin: 10rpx 0;}
.pro-addr text{font-size: 28rpx;color: #4ac373;}
.pro-date{font-size: 26rpx;color:#b4b4b4;}
.pro-date image{width: 30rpx;height: 34rpx;margin-bottom: -5rpx;}
.fast-recovery{width:160rpx;text-align:center;font-size: 30rpx;color:#fff;background-color: #4ac373;position: absolute;right: 5rpx;top:75rpx;height: 60rpx;line-height: 60rpx;border-radius: 10rpx;}
.fast-recovery.active{background-color: #f4a60c;}