/* pages/experts/experts.wxss */
.experts-box{background-color: #f6f6f6;}
.exp-head{background-color: #fff;padding-bottom:50rpx;margin-bottom: 15rpx;}
.exp-inform{position: relative;font-size: 30rpx;color:#a5a5a5;padding: 70rpx 0 50rpx;}
.exp-inform image{width: 140rpx;height: 140rpx;border-radius: 50%;border:solid 2px #4ac372;position: absolute;left:60rpx;top:60rpx;}
.exp-cont{padding-left: 240rpx;padding-right: 20rpx;}
.exp-name text{font-size: 32rpx;color:#4ac372;margin-right: 30rpx;}
.exp-p1{margin-top: 5rpx;margin-bottom: 10rpx;}
.exp-icon{text-align: center;color:#4ac372;font-size: 24rpx;}
.exp-icon text{margin: 0 10rpx;}
.exp-icon image{width: 30rpx;height: 30rpx;margin-bottom: -2px;}
.pro{background-color:#fff;margin-bottom: 15rpx;}
.pro-h{font-size:36rpx;color: #4ac372;padding: 15rpx 30rpx;border-bottom:solid 2rpx #f6f6f6;}
.pro-h text{display: inline-block;width: 6rpx;height: 32rpx;background-color: #4ac372;margin-bottom: -2rpx;margin-right:5rpx;}
.pro-text{padding: 30rpx 40rpx;font-size: 28rpx;color:#acacac;line-height: 1.5;}

.reply-cont{padding: 30rpx 40rpx;}
/* .reply-head{} */
.reply-head image{width: 70rpx;height: 70rpx;border-radius: 50%;margin-bottom: -22rpx;}
.rep-name{margin-left: 15rpx;margin-right: 15rpx;font-size: 28rpx;color:#4b4b4b;}
.rep-type{margin-right: 15rpx;font-size: 26rpx;color:#4b4b4b;}
.rep-date{font-size: 28rpx;color: #4ac372;}
.reply-p{font-size: 28rpx;color:#a5a5a5;line-height: 1.5;margin: 50rpx 0;}
.after{font-size: 24rpx;color: #4ac372;margin-bottom: 20rpx;}
.after text{font-size: 26rpx;margin-right: 10rpx;padding: 2rpx 12rpx;border:solid 2rpx #4ac372;border-radius: 15rpx;}
.voice-box{padding: 10rpx 30rpx 50rpx;background-color: #fff;margin-bottom: 10rpx;}
.voice{font-size: 30rpx;color: #c5c5c5;margin: 20rpx 0;position: relative;}
.voice progress{color: #4ac372;border-radius: 10rpx;width: 55%;position: absolute;left: 160rpx;top:15rpx;}
.voice image{width: 27rpx;height: 32rpx;margin-bottom: -3rpx;}
.voice-r{position: absolute;right: 0;top:0;}
.voice .shu{width:2rpx;height: 24rpx;display: inline-block;background-color: #c5c5c5;margin-right: 15rpx;}
.revert{background-color: #fff;padding: 50rpx 30rpx;text-align: right;}

