/* pages/recommend/recommend.wxss */
.recommend{position: relative;}
.banner{width: 100%;height: 320rpx;}
.join{position: absolute;top:200rpx;right:0;font-size: 32rpx;color:#4ac372;background-color: #fff;height:80rpx;line-height:80rpx;padding:0 20rpx 0 30rpx;border-top-left-radius: 40rpx;border-bottom-left-radius: 40rpx;}
.code{padding: 35rpx 30rpx;}
.code-title{font-size: 40rpx;color: #8e8e8e;}
.code-box{margin-top:30rpx;margin-bottom:10rpx;}
.code-box text{display:inline-block;width: 10%;text-align:center;height:80rpx;line-height:80rpx;margin: 6rpx;border:solid 2rpx #c4c4c4;font-size:40rpx;color: #4ac372;}
.code-p{font-size:24rpx;color: #bfbfbf;text-align: right;}
.copy{width: 80%;text-align:center;margin: 50rpx auto 0;height:100rpx;line-height: 100rpx;font-size:44rpx;color:#fff;background-color: #4ac372;border-radius: 50rpx;letter-spacing: 2rpx;}
.plan{overflow: hidden;width:80%;margin: 80rpx auto;}
.plan-l{float:left;}
.p1{font-size:40rpx;color:#828282;margin:30rpx 0;letter-spacing: 2rpx;}
.p2{font-size:26rpx;color:#636363;}
.plan-img{float:right;width: 200rpx;height: 200rpx;}